<%= form_for @service_request, role: "form", html: {class: "form-horizontal"} do |f| %>

  <h4>Shipping Information</h4>

  <div class="form-group">
    <%= f.label :prefix, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :prefix, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :contact_email, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :contact_email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address2, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :address2, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :state, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zip_code, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :zip_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address_type, class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.select :address_type, address_type_options, class: "form-control" %>
    </div>
  </div>

  <h4>Service Information</h4>

  <div class="form-group">
    <%= f.label :troubleshooting_reference, "Product Concern", class: "col-md-2 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :troubleshooting_reference, class: "form-control" %>
    </div>
  </div>

  <%= f.fields_for :line_items do |item| %>
    <div class="form-group">
      <%= item.label :item_type, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= item.select :item_type, ['Unit'], class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= item.label :model_number, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= item.text_field :model_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= item.label :serial_number, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= item.text_field :serial_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= item.label :additional_information, class: "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= item.text_field :additional_information, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-10">
      <%= f.submit "Submit", class: "btn btn-success", data: { disable_with: "Processing..." } %>
    </div>
  </div>

<% end %>
